<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.TrangChuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/trangchu_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/trangchu_addBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:text="+"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/circle" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/trangchu_btnMonHocToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Toán"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Lý"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocHoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Hoá"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocSinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Sinh"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocSu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Sử"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Địa"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocGDCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="GD"
                android:onClick="setOnListennerForButton"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/trangchu_btnMonHocCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="CN"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="Tin"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>

            <Button
                android:id="@+id/trangchu_btnMonHocAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#67EFE2"
                android:text="AV"
                android:textAllCaps="false"
                android:onClick="setOnListennerForButton"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/trangchu_list_dethi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_dethi_layout" />

</LinearLayout>