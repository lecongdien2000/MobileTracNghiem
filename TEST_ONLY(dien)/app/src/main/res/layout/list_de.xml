<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="200dp">
    <LinearLayout
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tendethi"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:text="Đề tổng hợp đạo hàm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvmota"
            android:textSize="17dp"
            android:text="Tổng hợp các câu hỏi trắc nghiệm đạo hàm mới nhất"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvlophoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Lớp 10"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btndang"
            android:text="Duyệt"
            android:layout_weight="1"
            android:textSize="12dp"
            android:backgroundTint="@color/xanh_nhat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnhuy"
            android:text="Huỷ"
            android:textSize="12dp"
            android:layout_marginLeft="180dp"
            android:backgroundTint="@color/xanh_nhat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>